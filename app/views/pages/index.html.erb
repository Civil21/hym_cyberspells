  <article class="strips__strip">
    <%= link_to new_user_session_path do%>
    <div class="strip__content">
      <h1 class="strip__title">Login</h1>
    </div>
    <%end%>
  </article>
  <article class="strips__strip">
    <%= link_to locations_path do %>
