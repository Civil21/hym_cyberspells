    </div>
    <%end%>
  </article>
  <article class="strips__strip">
    <div class="strip__content">
      <h1 class="strip__title">Gallery</h1>
    </div>
  </article>
  <article class="strips__strip">
    <%= link_to about_path do%>
    <div class="strip__content">
      <h1 class="strip__title">About</h1>
    </div>
    <%end%>
  </article>

  <article class="strips__strip">
