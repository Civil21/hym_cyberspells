
<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: 'form-control',autofocus: true %>
</div>

<div class="form-group">
	<%= f.label :description %>
	<%= f.text_area :description, class: 'form-control'%>
</div>

<%= form_for @item, url: items_path, html: { multipart: true } do |f| %>
  <%= f.file_field :image %>
<% end %>

<%= f.submit :save %>