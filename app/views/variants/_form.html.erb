<div class="form-group">
	<%= f.label :text %>
	<%= f.text_field :text, class: 'form-control',autofocus: true %>
</div>

<div class="form-group">
	<%= f.label :description %>
	<%= f.text_area :description, class: 'form-control'%>
</div>

<div class="form-group">
	<%= f.label :quest %>
	<%= f.select :quest_id, Quest.all.collect { |p| [ p.name, p.id ] }, include_blank: true, class: 'form-control'%>
</div>

<div class="form-group">
	<%= f.label :variant %>
	<%= f.select :variant_id, Variant.all.collect { |p| [ p.name, p.id ] }, include_blank: true, class: 'form-control'%>
</div>

<div class="form-group">
	<%= f.label "Якщо це належить квесту " %>
	<%= f.check_box :quest_sel, class: 'form-control'%>
</div>

<%= f.submit :save %>