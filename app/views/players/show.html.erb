<%= render 'layouts/navbar' %>
<script>
  $("#nav").addClass('nav-color5');
</script>
<section id="user-profile">
  <div class="container">
    <div class="row">
      <h3 class="text-center margin-bottom-lg position-relative">Гравець <%= @player.name %></h3>
      <div class="col-sm-12 col-md-6 col-lg-6 mt-6">
      <div class="inventary">
        <center><h4>Інвентарь</h4></center>
        <div class="col-sm-6 col-md-4 col-lg-4 mt-4">
          <% @items.each do |item| %>
          <div class="col-sm-6 col-md-4 col-lg-3 mt-4"> 
          <div class="element-card">
            <div class="front-facing">
              <h1 class="abr">A</h1>
              <p class="title"><%=item.name%></p>
             </div>
             <div class="back-facing">
              <p style="font-size: 35px"><%= item.description %></p></div>
              <p class="btn" href="https://en.wikipedia.org/wiki/Silver" target="_blank"><%= link_to 'More Info', location_path(item.name)  %></p>
             </div>
            </div>
          <%end%> 
         </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-6 col-lg-6 mt-6">
      <div class="stats">
        <center><h4>Титули</h4></center>

      </div>
      </div>
    </div>
  </div>
</section>

 <script>
  $(document).ready(function(){
  
  $('.element-card').on('click', function(){
    
    if ( $(this).hasClass('open') ) {
      $(this).removeClass('open');
    } else {
      $('.element-card').removeClass('open');
      $(this).addClass('open');
    }
    
  });
  
});
</script>